<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable
      name="UIM"
      type="com.spacex.ui.rocketDetails.RocketDetailsUIMDecorator"/>
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
      android:id="@+id/include_progressBar"
      layout="@layout/progress_bar"
      android:layout_width="@dimen/progress_bar_medium"
      android:layout_height="@dimen/progress_bar_medium"
      android:visibility="visible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:visibility="gone"/>

    <com.spacex.ui.customViews.ErrorView
      android:id="@+id/error_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:visibility="gone"/>

    <com.spacex.ui.customViews.EmptyView
      android:id="@+id/empty_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/launches"
      style="@style/RecyclerView"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:paddingTop="0dp"
      android:visibility="gone"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/guideline_center"
      app:layout_constraintTop_toTopOf="parent"
      tools:listitem="@layout/rocket_launch_vh"
      tools:visibility="visible"/>

    <Space
      android:id="@+id/guideline_center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
      android:id="@+id/chart_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/spacing_16"
      android:layout_marginStart="@dimen/vertical_keyline_primary"
      android:tint="@color/icon_black_inactive"
      android:visibility="gone"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/image"
      app:srcCompat="@drawable/ic_show_chart_white_24dp"
      tools:ignore="ContentDescription"
      tools:visibility="visible"/>

    <ImageView
      android:id="@+id/image"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:scaleType="centerCrop"
      android:src="@{UIM.image}"
      app:layout_constraintDimensionRatio="16:6"
      app:layout_constraintEnd_toStartOf="@id/guideline_center"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="ContentDescription"
      tools:src="@drawable/rocket_falcon_heavy"/>

    <TextView
      android:id="@+id/rocket_name"
      style="@style/Title.White.Primary"
      android:layout_width="0dp"
      android:layout_height="@dimen/spacing_40"
      android:paddingStart="@dimen/vertical_keyline_primary"
      android:paddingEnd="@dimen/vertical_keyline_primary"
      android:background="@drawable/background_protection"
      android:gravity="center_vertical"
      android:text="@{UIM.name}"
      app:layout_constraintBottom_toBottomOf="@+id/image"
      app:layout_constraintEnd_toStartOf="@id/guideline_center"
      app:layout_constraintStart_toStartOf="parent"
      tools:text="@string/rocket_name"/>

    <TextView
      android:id="@+id/chart_label"
      style="@style/Caption.Black.Secondary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/spacing_8"
      android:layout_marginStart="@dimen/vertical_keyline_secondary"
      android:paddingStart="@dimen/spacing_16"
      android:paddingEnd="@dimen/spacing_16"
      android:text="@string/chart_label"
      android:visibility="gone"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/image"
      tools:visibility="visible"/>

    <com.jjoe64.graphview.GraphView
      android:id="@+id/chart"
      android:layout_width="0dp"
      android:layout_height="@dimen/spacing_88"
      android:layout_marginStart="@dimen/vertical_keyline_secondary"
      android:layout_marginEnd="@dimen/spacing_16"
      android:visibility="gone"
      app:layout_constraintEnd_toStartOf="@id/guideline_center"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/chart_label"
      tools:visibility="visible"/>

    <ImageView
      android:id="@+id/description_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/spacing_16"
      android:layout_marginStart="@dimen/vertical_keyline_primary"
      android:tint="@color/icon_black_inactive"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/chart"
      app:srcCompat="@drawable/ic_baseline_notes_white_24dp"
      tools:ignore="ContentDescription"/>

    <TextView
      android:id="@+id/description"
      style="@style/Body1.Black.Secondary"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginStart="@dimen/vertical_keyline_secondary"
      android:layout_marginEnd="@dimen/vertical_keyline_primary"
      android:scrollbars="vertical"
      android:text="@{UIM.description}"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/guideline_center"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/description_icon"
      tools:text="@string/tools_string_rocket_description"/>

    <androidx.constraintlayout.widget.Group
      android:id="@+id/content"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="gone"
      app:constraint_referenced_ids="image,rocket_name,description_icon,description"
      tools:visibility="visible"/>

    <ImageView
      android:id="@+id/launches_icon"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="@dimen/spacing_16"
      android:layout_marginStart="@dimen/vertical_keyline_primary"
      android:tint="@color/icon_black_inactive"
      android:visibility="gone"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/description"
      app:srcCompat="@drawable/ic_video_library_white_24dp"
      tools:ignore="ContentDescription"
      tools:visibility="visible"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>