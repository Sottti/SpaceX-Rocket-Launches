<?xml version="1.0" encoding="utf-8"?>

<inset xmlns:android="http://schemas.android.com/apk/res/android"
  android:insetBottom="@dimen/button_raised_inset_bottom"
  android:insetLeft="@dimen/button_raised_inset_left"
  android:insetRight="@dimen/button_raised_inset_right"
  android:insetTop="@dimen/button_raised_inset_top">

  <selector>

    <item android:state_enabled="false">
      <shape android:shape="rectangle">
        <solid android:color="@color/white_12"/>
        <corners android:radius="@dimen/corner_radius_button_raised"/>
      </shape>
    </item>

    <item android:state_enabled="true">
      <ripple android:color="@color/grey_200">
        <item>
          <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/corner_radius_button_raised"/>
          </shape>
        </item>

      </ripple>
    </item>

  </selector>

</inset>